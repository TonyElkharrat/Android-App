<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout

android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="20dp"
        android:hint="@string/Name_Of_the_contact"
        android:id="@+id/contactNameForCallId"
        android:textSize="30sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@null"
        android:hint="@string/Telephone"
        android:id="@+id/phoneNumberforCallid"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textSize="30sp"/>

    <ImageButton
        android:id="@+id/validationCallID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/background_pressed_selector"
        android:src="@drawable/ic_call_white_24dp"
        />
    <ImageButton
        android:id="@+id/PermissionID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/validationCallID"
        android:layout_marginTop="400dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/background_pressed_selector"
        android:src="@drawable/ic_settings_black_24dp"
        android:visibility="invisible"
        />

</RelativeLayout>

</ScrollView>